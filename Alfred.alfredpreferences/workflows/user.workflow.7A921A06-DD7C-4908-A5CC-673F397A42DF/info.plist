				<string>include_once("workflows.php");

//
// Create the workflow object to use.
//
$wf = new Workflows();

//
// Get the raw query and store it for use.
//
$raw = "{query}";


if(strcmp("",$raw)===0) {
	//
	// Get the clipboard value.
	//
	exec("/usr/bin/pbpaste",$clip);

	//
	// Paste the clipboard to the Alfred command line.
	//
	$wf-&gt;result('scrpad', $clip[0], 'Get Clipboard', "", 'icon.png', 'no', $clip[0]);
} else {
	//
	// Return what the user edited.
	//
	$wf-&gt;result('scrpad',$raw,"Paste into Clipboard","", 'icon.png', 'yes', $raw);
}

echo $wf-&gt;toxml();
